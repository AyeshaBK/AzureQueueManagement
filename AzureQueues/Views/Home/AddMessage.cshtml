@model AzureQueuesModel.Message

@{
    ViewBag.Title = "Add Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Customer</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.MessageDetails, new { @class = "control-label col-md-2" })
        <div class="col-md-offset-2 col-md-10">
            @Html.EditorFor(x => x.MessageDetails)
            @Html.ValidationMessageFor(model => model.MessageDetails, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
